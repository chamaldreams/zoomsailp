<div class="row">
<div class="container">
<div class="col-md-6 col-md-offset-3">
<div class="jumbotron">

<div class="col-md-8 col-md-offset-3">
    <%= image_tag 'Aqua.png', class: 'aqua-png' %>
</div>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render 'devise/shared/error_messages'%>  

<div class="form-group">
    <%= f.text_field :first_name, placeholder: 'First Name', class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control' %>
</div>


  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",placeholder: 'password', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: 'Re-Type password',class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.text_field :company_name, placeholder: 'Company Name', class: 'form-control' %>
 </div>

 <div class="form-group">
    <%= f.text_field :telephone, placeholder: 'Telephone', class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.text_field :fax, placeholder: 'Fax', class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.text_field :web, placeholder: 'Web', class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.text_field :billing_address, placeholder: 'Billing Address', class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.text_field :shipping_address, placeholder: 'shippin address', class: 'form-control' %>
</div>

<div class="form-group">

<%= f.file_field :avatar%>
</div>


  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success btn-block' %>
  </div>

  <br>

  <%= link_to 'Log In', new_user_session_path , class: 'btn btn-primary btn-block' %>

  <br>

  <%= link_to 'Did not receive confirmation instractions?', new_user_confirmation_path, class: 'btn btn-warning btn-block'%>

  <br>

  <%= link_to 'Did not receive unlock instractions?', new_user_unlock_path, class: 'btn btn-danger btn-block' %>

  <% end %>


</div>
</div>
</div>
</div>
